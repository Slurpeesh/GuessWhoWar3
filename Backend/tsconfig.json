{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "CommonJS",
    "strict": true,
    "target": "ES6",
    "allowJs": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../*"]
    }
  },
  "include": ["./src/"],
  "exclude": ["src/**/*.test.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
